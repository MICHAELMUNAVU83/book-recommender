<p style="color: green"><%= notice %></p>

<h1 class="text-center">Books</h1>
<form class="d-flex justify-content-center" action="/search">
     <div class="d-flex justify-content-center">
        <input name="q" type="search" placeholder="Search" aria-label="Search" required class="form-control">
      </div>
        <button class="btn btn-success p-2 mb-1 mx-3" type="submit">Search</button>
       
</form>

<div class="container mt-2">
  <div class="row d-flex">
  <% @books.each do |book| %>
    <%= render book %>
  <% end %>
  </div>
</div>
